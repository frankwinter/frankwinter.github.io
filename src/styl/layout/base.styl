layout-padding = 1rem
layout-max-width = 1080px

body
  font-family font-stack-primary
  font-size 100%
  min-height 100vh
  background: color-document-bg
  text-align center
  
  +above(3)
    text-align left
  
a
  text-decoration none
  color color-link-default

strong
  font-weight bold
  
svg
  height: 100%
  width: 100%
  
  path
    transition all 0.2s linear

.header
  background color-document-bg
  width 100%
  
  +above(3)
    position fixed
    z-index 10
  
.header .container
  width 100%
  background color-document-bg
  
  +above(3)
    flex-direction row
    display flex
    justify-content space-between
    align-items center
    height 80px
  
.header__brand
  font-size 1rem
  font-weight font-weight-thin
  text-transform uppercase
  flex 1
  justify-content space-around
  margin-bottom 2rem
  
  +above(3)
    margin-bottom 0

  strong
    display block
    margin-bottom 0.2rem

    +above(3)
      display inline-block
      margin-bottom 0

.header__brand__devider
  display none
  
  +above(3)
    display inline
  
.header__social
  width 40px
  margin-left 10px
  display inline-block

  path
    fill color-gray-light
  
  &:hover path
    fill color-gray-dark

.container
  padding layout-padding
  width 100%
  
.intro
  padding-bottom 100px
  
  +above(3)
    min-height 100vh
    display flex
    flex-direction column
    justify-content flex-end
  
  h1
  p
    font-size 1.6rem
    margin 0
    
    +above(3)
      font-size 2.2rem
    
  h1
    margin-bottom 1.6rem

.intro__border
  border-bottom 8px solid black
  width 120px
  display inline-block
  margin-bottom 40px
  
  +above(3)
    margin-bottom 80px
    
.projects
  lost-utiliy clearfix
  
.project
  margin-bottom 1rem
  position relative
  lost-column 1/1
  
  +above(3)
    lost-column 1/2
  
  +above(4)
    lost-column 1/3
    
  +above(5)
    lost-column 1/4
  
  img
    width 100%
    vertical-align top
  
.project__overlay
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  //background rgba(110, 100, 100, 0.85)
  background rgba(0, 0, 0, 0.85)
  padding 1rem
  color white
  display flex
  justify-content center
  align-items center
  flex-direction column
  opacity 0
  transition all 0.2s linear
  
  h3
  p
    margin 0
    
  h3
    margin-bottom 0.3rem
  
.project:hover .project__overlay
  opacity 1